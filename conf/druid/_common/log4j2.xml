<?xml version="1.0" encoding="UTF-8" ?>

<Configuration status="WARN">
  <Properties>
    <Property name="pattern">%date{ISO8601} %highlight{%-5.5level} %logger: %message%n</Property>
  </Properties>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>
